# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# GET         /new                            controllers.CompanyController.view
GET         /drugs/group                    controllers.CompanyController.findDrugsGroups
POST        /drugs/groupProd                controllers.CompanyController.findByGroup
GET         /drugs/prod                     controllers.CompanyController.findDrugsProducts(offset: Int, pageSize: Int, sort: Option[String])
POST        /drugs/prod                     controllers.CompanyController.findDrugsProducts(offset: Int, pageSize: Int, sort: Option[String])
GET         /drugs/create                   controllers.CompanyController.create
GET         /drugs/fuzzySearch              controllers.CompanyController.combinedSearchDrugsProducts(searchText:String, offset:Int, pageSize:Int, sort:Option[String])
POST        /drugs/fuzzySearch              controllers.CompanyController.combinedSearchDrugsProducts(searchText:String, offset:Int, pageSize:Int, sort:Option[String])
POST        /drugs/setImage                 controllers.CompanyController.setImageToDrug
POST        /drigs/group                    controllers.CompanyController.insertDrugsGroup
POST        /drugs/cart/item                controllers.CompanyController.addItemToCart

# Home page
GET         /                               controllers.CompanyController.view
GET         /cart                           controllers.CompanyController.cartView
POST        /cart                           controllers.CompanyController.cartSend
GET         /images                         controllers.CompanyController.setImageView
GET         /signOut                        controllers.ApplicationController.signOut
GET         /authenticate/:provider         controllers.SocialAuthController.authenticate(provider)
POST        /authenticate/:provider         controllers.SocialAuthController.authenticate(provider)

GET         /signUp                         controllers.SignUpController.view
POST        /signUp                         controllers.SignUpController.submit

POST        /signIn                         controllers.SignInController.submit

GET         /password/forgot                controllers.ForgotPasswordController.view
POST        /password/forgot                controllers.ForgotPasswordController.submit
GET         /password/reset/:token          controllers.ResetPasswordController.view(token: java.util.UUID)
POST        /password/reset/:token          controllers.ResetPasswordController.submit(token: java.util.UUID)
GET         /password/change                controllers.ChangePasswordController.view
POST        /password/change                controllers.ChangePasswordController.submit

GET         /account/email/:email           controllers.ActivateAccountController.send(email: String)
GET         /account/activate/:token        controllers.ActivateAccountController.activate(token: java.util.UUID)

#GET         /projects                        controllers.ProjectController.index
#GET         /projects/create                 controllers.ProjectController.create
#GET         /projects/list                   controllers.ProjectController.findAll(offset: Option[Int], pageSize: Option[Int])
#POST        /projects/list                   controllers.ProjectController.jsonFindAll(offset: Option[Int], pageSize: Option[Int])
#GET         /project/:prjId                  controllers.ProjectController.project(prjId: Long)

POST        /goods/upload                   controllers.GoodsImportController.upload

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)

->          /webjars                        webjars.Routes

